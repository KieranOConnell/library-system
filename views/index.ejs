<!doctype html>
<html lang="en">

<head>
    <title>Library System</title>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css'>
    <link rel='stylesheet' href='/stylesheets/font-awesome.min.css'>
    <link rel='stylesheet' href='/stylesheets/style.css'>
    <script src='/javascripts/bootstrap.min.js'></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <h1>Library System</h1>
        </div>
        <div class="row">
            <div class="col-xs-6 col-md-4">
                <div class="row">
                    <form method="POST" action="/books/total">
                        <input class="btn btn-primary" type="submit" value="View Total No. Books">
                    </form>
                </div>
                <div class="row">
                    <h2 class="left">Book Details</h2>
                </div>
                <ul>
                    <!-- Loop through array of objects (rows) to display list of books on screen *https://ejs.co/* -->
                    <% books.forEach(function(book){ %>
                    <div class="row">
                        <h3><%= book.value.title %></h3>
                        <form method="POST" action="/book/delete/<%= book.key %>">
                            <input type="hidden" value="<%= book.value.rev %>" name="rev">
                            <button type="submit" class="btn btn-outline-danger btn-sm">X</button>
                        </form>
                    </div>
                    <ul class="book-details">
                        <li><span class="sub-heading">Author:</span>&nbsp;<%= book.value.author %></li>
                        <li><span class="sub-heading">Publisher(s):</span>&nbsp;<%= book.value.publishers %></li>
                        <li><span class="sub-heading">Pages:</span>&nbsp;<%= book.value.pages %></li>
                        <li><span class="sub-heading">Genre:</span>&nbsp;<%= book.value.genre %></li>
                        <li><span class="sub-heading">Protagonist:</span>&nbsp;<%= book.value.characters.protagonist %>
                        </li>
                        <li><span class="sub-heading">Antagonist:</span>&nbsp;<%= book.value.characters.antagonist %>
                        </li>
                        <li><span class="sub-heading">Release Date:</span>&nbsp;<%= book.value.release_date %></li>
                        <li><span class="sub-heading">Rating:</span>&nbsp;<%= book.value.rating %></li>
                    </ul>
                    <% }); %>
                </ul>
            </div>
            <div class="col-xs-6 col-md-4">
                <div class="row">
                    <h2>Add Book</h2>
                </div>
                <div class="row">
                    <form method="POST" action="/book/add">
                        <input type="text" name="title" placeholder="Enter book title">
                        <input type="text" name="author" placeholder="Enter book author">
                        <input type="text" name="publisher" placeholder="Enter book publisher">
                        <input type="text" name="pages" placeholder="Enter book pages">
                        <input type="text" name="genre" placeholder="Enter book genre">
                        <input type="text" name="protagonist" placeholder="Enter book protagonist">
                        <input type="text" name="antagonist" placeholder="Enter book antagonist">
                        <input type="text" name="release_date" placeholder="Enter book release date (dd/MM/YYYY)">
                        <input type="text" name="rating" placeholder="Enter book rating (?/5)">
                        <input class="btn btn-primary" type="submit" value="Create">
                    </form>
                </div>
            </div>
            <div class="col-xs-6 col-md-4">
                <div class="row">
                    <h2>Update Book</h2>
                </div>
                <div class="row">
                    <form method="POST" action="/book/update">
                        <input type="text" name="bookId" placeholder="Enter book ID you wish to update">
                        <input type="text" name="rev" placeholder="Enter book rev value">
                        <input type="text" name="title" id="title" placeholder="Enter book title">
                        <input type="text" name="author" id="author" placeholder="Enter book author">
                        <input type="text" name="publisher" id="publisher" placeholder="Enter book publisher">
                        <input type="text" name="pages" id="pages" placeholder="Enter book pages">
                        <input type="text" name="genre" id="genre" placeholder="Enter book genre">
                        <input type="text" name="protagonist" id="protagonist" placeholder="Enter book protagonist">
                        <input type="text" name="antagonist" id="antagonist" placeholder="Enter book antagonist">
                        <input type="text" name="release_date" id="release_date"
                            placeholder="Enter book release date (dd/MM/YYYY)">
                        <input type="text" name="rating" id="rating" placeholder="Enter book rating (?/5)">
                        <input class="btn btn-primary" type="submit" value="Update">
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>